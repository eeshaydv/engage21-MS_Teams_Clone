<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/colorPrimaryDark" />


            <RelativeLayout
                android:id="@+id/rl_two_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ms_logo_sq"/>

                <TextView
                    android:layout_below="@id/logo"
                    android:id="@+id/tv_one_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="T E A M S "
                    android:fontFamily="@font/droid_sans_chinese"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />



            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="-50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_one_login"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="240dp"
                        android:elevation="10dp"
                        app:cardBackgroundColor="#fcfcfc"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        android:foregroundGravity="center"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="14dp"
                                    android:padding="10dp"
                                    app:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_email_24dp" />


                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginTop="11dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <EditText
                                        android:id="@+id/login_email"
                                        android:layout_width="289dp"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="2dp"
                                        android:gravity="left"
                                        android:backgroundTint="@color/colorPrimaryDark"
                                        android:hint=" Email"
                                        android:inputType="textEmailAddress"
                                        android:textSize="15sp" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    app:tint="@color/colorPrimaryDark"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="1dp"
                                    android:padding="10dp"
                                    android:src="@drawable/password" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:id="@+id/passwordNew"
                                    app:passwordToggleEnabled="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="wrap_content"
                                    >

                                    <EditText
                                        android:id="@+id/login_password"
                                        android:layout_width="289dp"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="2dp"
                                        android:gravity="left"
                                        android:layout_marginBottom="24dp"
                                        android:inputType="textPassword"
                                        android:backgroundTint="@color/colorPrimaryDark"
                                        android:hint="Password"
                                        android:textSize="15sp" />
                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>



                <Button
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/cv_one_login"
                    android:fontFamily="@font/droid_sans_chinese"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:layout_marginTop="-35dp"
                    android:text="LOGIN"
                    android:textSize="25sp"
                    android:id="@+id/login_button"
                    android:textColor="@android:color/white"
                    android:elevation="15dp" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar"

                    android:visibility="gone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_button"
                    android:fontFamily="@font/droid_sans_chinese"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginTop="10dp"
                    android:id="@+id/register_account_link"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:text="Don't have an account? Create one"/>






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pass"
                    android:padding="16dp"
                    android:text="Forgot password?"
                    android:fontFamily="@font/droid_sans_chinese"
                    android:textColor="@color/colorPrimaryDark"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />




            </LinearLayout>




        </RelativeLayout>
    </LinearLayout>
</ScrollView>